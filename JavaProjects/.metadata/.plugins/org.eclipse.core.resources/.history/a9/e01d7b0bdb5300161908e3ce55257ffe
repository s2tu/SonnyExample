package com.training;

public class Application4 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		LandLoan sonnyland = new LandLoan(100,5);
		VehicleLoan sonnyvehicle = new VehicleLoan(100,5);
		GoldLoan sonnygold = new GoldLoan(100,5);
		
		
		System.out.println("Eligibility for Land = "+   sonnyland.calculate_eligibility());
		System.out.println("Interest for Land = "+   sonnyland.calculate_interest());

		System.out.println("Eligibility for Vehicle = "+   sonnyvehicle.calculate_eligibility());
		System.out.println("Interest for Vehicle = "+   sonnyvehicle.calculate_interest());		
		
		System.out.println("Eligibility for Gold = "+   sonnygold.calculate_eligibility());
		System.out.println("Interest for Gold = "+   sonnygold.calculate_interest());		
	}

}
