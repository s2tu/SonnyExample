package com.training;

public class SavingsAccount extends BankAccount{
	public SavingsAccount(int accNumber, String accholdername, int bal) {
		super(accNumber, accholdername, bal);
	}

	@Override
	public double widthdraw(double amount) {
		// TODO Auto-generated method stub
		//min balance 
		//if 
		if(amount < 0 ){
			System.out.println("Withdraw rejected. Cannot widthdraw negative number.");
			System.out.println("The balance returned is " + super.getBalance());
			return super.getBalance();
		}		
		double minbal = 600;
		if(super.getBalance() - amount < minbal ){
			System.out.println("Minimum balance not reached.  Widthdraw denied.");
			System.out.println("The balance  is " + super.getBalance());
			return super.getBalance();
		}
		return super.widthdraw(amount);
	}
	
}
