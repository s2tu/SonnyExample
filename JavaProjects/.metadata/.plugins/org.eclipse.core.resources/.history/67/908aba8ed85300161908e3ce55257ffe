package com.training;

public class VehicleLoan extends AbstractLoans {
	private double costofvehicle;

	VehicleLoan(double costvehicle, double numberyears){
		costofvehicle = costvehicle;
		super.setNumyears(numberyears);
	}
	
	
	@Override
	public double calculate_eligibility() {
		// TODO Auto-generated method stub
		double depricationonvehical = 0.10;
		super.setLoanamount(costofvehicle*depricationonvehical);
		return super.getLoanamount();
	}

	@Override
	public double calculate_interest() {
		// TODO Auto-generated method stub
		double interest = 0.0035;	
		return interest*super.getNumyears()*super.getLoanamount();
	}
	
	

}
