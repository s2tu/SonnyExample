package domains;

import java.io.File;
import java.io.FileOutputStream;
import java.io.ObjectOutputStream;

public class Utilities {
	public  void serializing(Object obj){
		try{
			ObjectOutputStream out = new ObjectOutputStream(new FileOutputStream(new File("serializedobj.text")));
			out.writeObject(obj);
		}catch(Exception e){
			System.out.println(e.getMessage());
		}
	}
	
	public  void deserializing(){
		try{
			ObjectOutputStream out = new ObjectOutputStream(new FileOutputStream(new File("serializedobj.text")));
			out.writeObject(obj);
		}catch(Exception e){
			System.out.println(e.getMessage());
		}
	}	
}
